<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".ui.MenuActivity">

    <data>

        <variable
            name="myViewModel"
            type="com.example.farma4.ui.InicialViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="16sp">

        <Button
            android:id="@+id/buttonToActivity1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="@{()->myViewModel.toAddMedicina()}"
            android:text="@={myViewModel.buttonToActivity1}"
            android:textSize="18sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/buttonToActivity2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:onClick="@{()->myViewModel.toListMedicinas()}"
            android:text="@={myViewModel.buttonToActivity2}"
            android:textSize="18sp"
            android:textStyle="bold" />

    </LinearLayout>


</layout>